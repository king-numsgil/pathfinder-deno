{
    "tasks": {
        "serve": "deno run --allow-net --allow-read --allow-write --allow-env --allow-ffi --allow-run --allow-sys src/server.ts",
        "refresh": "deno run --allow-net --allow-read --allow-write --allow-env --allow-ffi --allow-sys refresh.ts",
        "build": "deno run -A npm:vite build"
    },
    "compilerOptions": {
        "checkJs": true,
        "lib": ["ESNext", "DOM", "DOM.Iterable", "Dom.AsyncIterable", "deno.ns", "vite/client"],
        "strict": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noPropertyAccessFromIndexSignature": false
    },
    "imports": {
        "@/": "./src/",
        "@denorg/scrypt": "jsr:@denorg/scrypt@^4.4.4",
        "@hono/zod-validator": "npm:@hono/zod-validator@^0.4.1",
        "@mantine/core": "npm:@mantine/core@^7.14.3",
        "@mantine/form": "npm:@mantine/form@^7.14.3",
        "@mantine/hooks": "npm:@mantine/hooks@^7.14.3",
        "@mantine/modals": "npm:@mantine/modals@^7.14.3",
        "@mantine/notifications": "npm:@mantine/notifications@^7.14.3",
        "@mantine/spotlight": "npm:@mantine/spotlight@^7.14.3",
        "@mantine/vanilla-extract": "npm:@mantine/vanilla-extract@^7.14.3",
        "@mikro-orm/core": "npm:@mikro-orm/core@^6.4.0",
        "@mikro-orm/sqlite": "npm:@mikro-orm/sqlite@^6.4.0",
        "@radix-ui/react-icons": "npm:@radix-ui/react-icons@^1.3.2",
        "@std/ulid": "jsr:@std/ulid@^1.0.0",
        "@types/node": "npm:@types/node@^22.10.1",
        "@types/react": "npm:@types/react@^18.3.12",
        "@types/react-dom": "npm:@types/react-dom@^18.3.1",
        "@vanilla-extract/css": "npm:@vanilla-extract/css@^1.16.1",
        "@vanilla-extract/vite-plugin": "npm:@vanilla-extract/vite-plugin@^4.0.18",
        "@vitejs/plugin-react": "npm:@vitejs/plugin-react@^4.3.3",
        "hono": "npm:hono@^4.6.12",
        "postcss": "npm:postcss@^8.4.49",
        "postcss-preset-mantine": "npm:postcss-preset-mantine@^1.17.0",
        "postcss-simple-vars": "npm:postcss-simple-vars@^7.0.1",
        "react": "npm:react@^18.3.1",
        "react-dom": "npm:react-dom@^18.3.1",
        "react-helmet-async": "npm:react-helmet-async@^2.0.5",
        "react-router-dom": "npm:react-router-dom@^7.0.1",
        "typescript": "npm:typescript@^5.7.2",
        "vite": "npm:vite@^6.0.1",
        "zod": "npm:zod@^3.23.8"
    },
    "fmt": {
        "indentWidth": 4,
        "lineWidth": 120,
        "semiColons": true,
        "useTabs": false,
        "exclude": [
			"data",
            "dist",
            ".idea",
            ".git"
        ]
    }
}
